# SAKIP Application Environment Configuration
# Copy this file to .env and update the values according to your environment

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
NODE_ENV=development
PORT=3000
VITE_APP_NAME=SAKIP - Sistem Akuntabilitas Kinerja Instansi Pemerintah
VITE_APP_VERSION=1.2.0
VITE_APP_DESCRIPTION=Versi Terpadu & Terintegrasi

# =============================================================================
# API CONFIGURATION
# =============================================================================
# Backend API URL
VITE_API_URL=http://localhost:8000/api/v1
VITE_API_TIMEOUT=30000

# WebSocket URL for real-time features
VITE_WS_URL=ws://localhost:8000/ws

# =============================================================================
# AUTHENTICATION SETTINGS
# =============================================================================
# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Session Configuration
SESSION_SECRET=your-session-secret-key
SESSION_TIMEOUT=3600000

# Password Policy
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SYMBOLS=true

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL Database
DATABASE_URL=postgresql://sakip_user:password@localhost:5432/sakip_dev
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10
DATABASE_TIMEOUT=30000

# Redis Cache
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TIMEOUT=5000

# =============================================================================
# FILE STORAGE CONFIGURATION
# =============================================================================
# Local File Storage
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,jpg,jpeg,png,gif

# Cloud Storage (Optional - AWS S3)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=ap-southeast-1
AWS_S3_BUCKET=sakip-files
AWS_S3_ENDPOINT=

# MinIO (Self-hosted S3-compatible storage)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=sakip-files
MINIO_USE_SSL=false

# =============================================================================
# EXTERNAL INTEGRATIONS
# =============================================================================
# SIPD (Sistem Informasi Pemerintahan Daerah)
SIPD_API_URL=https://sipd.kemendagri.go.id/api
SIPD_API_KEY=your-sipd-api-key
SIPD_API_VERSION=v1
SIPD_TIMEOUT=30000

# BKN (Badan Kepegawaian Negara)
BKN_API_URL=https://api.bkn.go.id
BKN_API_KEY=your-bkn-api-key
BKN_API_VERSION=v1
BKN_TIMEOUT=30000

# BKD (Badan Kepegawaian Daerah)
BKD_API_URL=https://bkd.pemda.go.id/api
BKD_API_KEY=your-bkd-api-key
BKD_API_VERSION=v1
BKD_TIMEOUT=30000

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# SMTP Settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=noreply@sakip.pemda.go.id
SMTP_PASS=your-app-specific-password

# Email Templates
EMAIL_FROM_NAME=SAKIP System
EMAIL_FROM_ADDRESS=noreply@sakip.pemda.go.id
EMAIL_REPLY_TO=support@sakip.pemda.go.id

# =============================================================================
# NOTIFICATION SETTINGS
# =============================================================================
# WhatsApp Integration (Optional)
WHATSAPP_API_URL=https://api.whatsapp.com/send
WHATSAPP_API_KEY=your-whatsapp-api-key
WHATSAPP_PHONE_NUMBER=+6281234567890

# Push Notifications (Optional)
PUSH_NOTIFICATION_KEY=your-push-notification-key
PUSH_NOTIFICATION_ENDPOINT=https://fcm.googleapis.com/fcm/send

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Log Level (error, warn, info, debug)
LOG_LEVEL=info
LOG_FILE_PATH=./logs
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Error Tracking (Sentry)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=development

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# Security Headers
HELMET_ENABLED=true
HSTS_MAX_AGE=31536000
CSP_ENABLED=true

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================
# Application Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
METRICS_PATH=/metrics

# Health Check
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/health

# Google Analytics (Optional)
VITE_GA_TRACKING_ID=GA-XXXXXXXXX

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Debug Mode
DEBUG=sakip:*
VITE_DEBUG_MODE=true

# Hot Reload
VITE_HMR_PORT=24678
VITE_HMR_HOST=localhost

# Mock Data
USE_MOCK_DATA=true
MOCK_API_DELAY=500

# =============================================================================
# PRODUCTION OVERRIDES
# =============================================================================
# These settings should be overridden in production environment

# Production Database
# DATABASE_URL=postgresql://sakip_prod:secure_password@db.example.com:5432/sakip_prod

# Production Redis
# REDIS_URL=redis://redis.example.com:6379

# Production API
# VITE_API_URL=https://api.sakip.pemda.go.id/v1

# Production Security
# JWT_SECRET=super-secure-production-jwt-secret-256-bit-minimum
# SESSION_SECRET=super-secure-production-session-secret

# Production SMTP
# SMTP_HOST=smtp.example.com
# SMTP_USER=noreply@sakip.pemda.go.id
# SMTP_PASS=secure-production-password

# Production Monitoring
# SENTRY_DSN=https://production-sentry-dsn@sentry.io/project-id
# SENTRY_ENVIRONMENT=production

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable specific features
FEATURE_AI_RECOMMENDATIONS=true
FEATURE_REAL_TIME_SYNC=true
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_MOBILE_APP=false
FEATURE_MULTI_LANGUAGE=false
FEATURE_DARK_MODE=true

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
# Backup Settings
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=sakip-backups

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
# Cache TTL (Time To Live) in seconds
CACHE_TTL_SHORT=300
CACHE_TTL_MEDIUM=1800
CACHE_TTL_LONG=3600
CACHE_TTL_VERY_LONG=86400

# Cache Keys Prefix
CACHE_PREFIX=sakip:

# =============================================================================
# TIMEZONE & LOCALIZATION
# =============================================================================
# Application Timezone
TZ=Asia/Jakarta
LOCALE=id_ID

# Date Format
DATE_FORMAT=DD/MM/YYYY
DATETIME_FORMAT=DD/MM/YYYY HH:mm:ss
TIME_FORMAT=HH:mm

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================
# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Query Timeout
QUERY_TIMEOUT=30000

# Connection Pool
DB_POOL_MIN=2
DB_POOL_MAX=20

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================
# Test Database
TEST_DATABASE_URL=postgresql://sakip_test:password@localhost:5432/sakip_test

# Test Settings
TEST_TIMEOUT=10000
TEST_COVERAGE_THRESHOLD=80

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================
# Docker-specific settings (used in docker-compose)
POSTGRES_DB=sakip_dev
POSTGRES_USER=sakip_user
POSTGRES_PASSWORD=password

REDIS_PASSWORD=

# =============================================================================
# NOTES
# =============================================================================
# 1. Never commit .env file to version control
# 2. Use strong passwords and secrets in production
# 3. Regularly rotate API keys and secrets
# 4. Enable SSL/TLS in production
# 5. Use environment-specific configuration files
# 6. Monitor and log all configuration changes
# 7. Backup configuration files securely
# 8. Use secrets management tools in production (e.g., HashiCorp Vault, AWS Secrets Manager)
# 9. Validate all environment variables on application startup
# 10. Document any custom environment variables added to the project